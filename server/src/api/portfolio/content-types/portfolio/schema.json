{
  "kind": "collectionType",
  "collectionName": "portfolios",
  "info": {
    "singularName": "portfolio",
    "pluralName": "portfolios",
    "displayName": "Portfolio",
    "description": "Portfolio items showcasing projects and work"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "slug": {
      "type": "uid",
      "targetField": "title",
      "required": true
    },
    "workType": {
      "type": "enumeration",
      "enum": ["real", "dummy"],
      "default": "real"
    },
    "shortDescription": {
      "type": "text"
    },
    "detailedDescription": {
      "type": "blocks"
    },
    "problem": {
      "type": "blocks"
    },
    "solution": {
      "type": "blocks"
    },
    "role": {
      "type": "string"
    },
    "year": {
      "type": "string"
    },
    "portfolioType": {
      "type": "enumeration",
      "enum": ["website", "landing_page", "commerce", "ecommerce", "web_app"]
    },
    "techTags": {
      "type": "component",
      "repeatable": true,
      "component": "global.tech-tags"
    },
    "isFeatured": {
      "type": "boolean",
      "default": false
    },
    "liveUrl": {
      "type": "string"
    },
    "githubUrl": {
      "type": "string"
    },
    "clientName": {
      "type": "string"
    },
    "thumbnail": {
      "type": "media",
      "multiple": false,
      "allowedTypes": ["images"]
    },
    "portfolioImages": {
      "type": "media",
      "multiple": true,
      "allowedTypes": ["images"]
    }
  }
}
