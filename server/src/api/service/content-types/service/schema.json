{
  "kind": "collectionType",
  "collectionName": "services",
  "info": {
    "singularName": "service",
    "pluralName": "services",
    "displayName": "Service",
    "description": "Services offered to clients"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "slug": {
      "type": "uid",
      "targetField": "title",
      "required": true
    },
    "description": {
      "type": "blocks",
      "required": true
    },
    "short_description": {
      "type": "text",
      "required": true
    },
    "icon": {
      "type": "enumeration",
      "enum": [
        "code",
        "palette",
        "server",
        "database",
        "smartphone",
        "cloud",
        "globe",
        "shield",
        "layers",
        "sparkles"
      ],
      "required": true,
      "default": "code"
    },
    "featured": {
      "type": "boolean",
      "default": false
    },
    "order": {
      "type": "integer"
    },
    "image": {
      "type": "media",
      "multiple": false,
      "allowedTypes": ["images"]
    }
  }
}
