# Next.js Configuration
NODE_ENV=production

# Strapi API URL
# For local development: use http://localhost:1337
# For production VPS: use http://YOUR_VPS_IP:1337 or https://api.yourdomain.com
NEXT_PUBLIC_API_URL=http://localhost:1337

# Optional: Server-side API URL (inside Docker network)
# Only needed if making server-side requests to Strapi
API_URL=http://server:1337

# Optional: Analytics
# NEXT_PUBLIC_GA_ID=
# NEXT_PUBLIC_GTM_ID=

# Optional: Site Configuration
# NEXT_PUBLIC_SITE_URL=https://yourdomain.com
